<Window x:Class="ызщке.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sport School" Height="350" Width="525">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Спортивная школа им. Э.В. Лимонова" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,20" />

            <!-- Кнопка Список Секций -->
            <Button Content="Список секций" Width="200" Height="30" Margin="0,10" Click="btnSections_Click" />



            <!-- Кнопка Добавить Спортсмена -->
            <Button Content="Добавить спортсмена" Width="200" Height="30" Margin="0,10" Click="btnAddAthlete_Click" />

            <!-- Кнопка Удалить Спортсмена -->
            <Button Content="Удалить спортсмена" Width="200" Height="30" Margin="0,10" Click="btnDeleteAthlete_Click" />
        </StackPanel>
    </Grid>
</Window>
