<Window x:Class="ызщке.AddAthleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить спортсмена" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="ФИО:"/>
            <TextBox x:Name="txtFullName" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Возраст:"/>
            <TextBox x:Name="txtAge" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Достижения:"/>
            <TextBox x:Name="txtAchievements" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Секция:"/>
            <ComboBox x:Name="comboBoxSections" Width="300" Margin="0,5,0,10"/>

            <Button Content="Добавить" Width="100" Click="btnAddAthlete_Click"/>
        </StackPanel>
    </Grid>
</Window>
